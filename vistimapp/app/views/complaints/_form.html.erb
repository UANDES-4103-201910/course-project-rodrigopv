<%= form_with(model: complaint, local: true) do |form| %>
  <% if complaint.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(complaint.errors.count, "error") %> prohibited this complaint from being saved:</h2>

      <ul>
      <% complaint.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, placeholder: "Complaint Title...", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.text_area :content, placeholder: "Write your complaint here",  class: "form-control", rows: 5 %>
  </div>

  <div class="field">
    <%= form.label :main_image %><br />
    <%= form.file_field :main_image %>
  </div>

  <input id="pac-input" class="form-control" type="text" placeholder="Enter location of complaint">

  <%= form.hidden_field :lat %>
  <%= form.hidden_field :lng %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
