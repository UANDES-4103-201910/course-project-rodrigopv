<div class="hero">
    <img class="hero-img" src="<%= asset_path('uandes.jpg') %>" />
    <h1 class="mt-5 text-center">Welcome</h1>
</div>
<div class="container">
<% if notice %>
  <p class="alert alert-success mt-1"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger mt-1"><%= alert %></p>
<% end %>

    <div class="row">
      <div class="col-lg-12">
        <p class="lead text-center">Are you a Vistim? Write your best complaints here!</p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="card box-shadow">
            <div class="card-header">
                <h3 class="">Trending</h3>

            </div>
            <div class="card-body">
    <% @complaints.each do |complaint| %>
        <li><%= link_to complaint.title, complaint %> (author: <%= link_to complaint.user.name, complaint.user %>)</li>
    <% end %>

            </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card box-shadow">
            <div class="card-header">
                <h3 class="text-center">New users</h3>
            </div>
            <div class="card-body">
              <ul>
    <% @users.each do |user| %>
        <li><%= link_to user.name, user %></li>
    <% end %>
              </ul>
            </div>
        </div>
      </div>

    </div>

</div>
