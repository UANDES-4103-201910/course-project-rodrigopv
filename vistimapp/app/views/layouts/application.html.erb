<!DOCTYPE html>
<html>
  <head>
    <title>Vistimapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet">

  </head>


  <body class="bg-light" 

    <% if controller_name = 'users' and user_signed_in? %>
      data-logged-user-id="<%= current_user.id %>"
      data-profile-id="<%= params[:id].to_i %>"
    <% end %>
  >

  <!-- Navigation Bar -->
  <%= render 'layouts/nav' %>

  <!-- Page Content -->
  <div class="container">

<% if notice %>
  <p class="alert alert-success mt-1"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger mt-1"><%= alert %></p>
<% end %>

         <%= yield %>
  </div>

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.6/holder.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag params[:controller] rescue nil %>

  </body>
</html>
